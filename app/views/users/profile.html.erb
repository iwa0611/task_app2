<div class="flash_message">
  <div class="notice">
    <% if flash[:notice] %>
      <%= flash[:notice] %>
    <% end %>
  </div>
</div>
<div class="container_field">
  <div class="profile">
    <div class="side_nav_pc">
      <ul>
        <li>
          <a href="">アカウント</a>
        </li>
        <li>
          <a href="">プロフィール</a>
        </li>
      </ul>
    </div>
    <div class="top_nav_sp">
      <ul>
        <li>
          <a href="">アカウント</a>
        </li>
        <li>
          <a href="">プロフィール</a>
        </li>
      </ul>
    </div>
    <div class="user_view">
      <div class="user_view_box">
        <div class="user_view_content">
          <div class="profile">
            <h5>プロフィール</h5>
          </div>
        </div>
        <%= form_with model: @user do |f| %>
          <div class="user_view_content">
            <div class="profile">
              <div class="offset">
                <div class="icon_box">
                  <img class="user_icon" src="" alt="icon">
                </div>
              </div>
            </div>
          </div>
          <div class="user_view_content">
            <div class="profile">
              <label class="require">アイコン画像</label>
              <%= f.file_field :image %>
            </div>
          </div>
          <div class="user_view_content">
            <div class="profile">
              <label class="require">名前</label>
              <%= f.text_field :name %>
            </div>
          </div>
          <div class="user_view_content">
            <div class="profile">
              <label class= "require">自己紹介</label>
              <%= f.text_area :introduction, placeholder:"自己紹介を入力"%>
            </div>
          </div>
          <div class="user_view_content">
            <div class="profile">
              <%= f.submit"更新" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
